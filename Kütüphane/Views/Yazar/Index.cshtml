@using KütüphaneSistemi.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>
<table class="table table-striped">
    <tr style="background-color:#ffd800">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>Yazarın Kitapları</th>
    </tr>
    @foreach (var y in Model)
    {
        <tr>
            <td>@y.ID</td>
            <td>@y.AD</td>
            <td>@y.SOYAD</td>            
            <td> @Html.ActionLink("Sil", "YazarSil", new { id = y.ID },
           new { @class = "btn btn-danger", onclick = "return confirm('Silmek istiyor musunuz?')" }) @*silme alert*@
            </td>
        <td><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-warning">Güncelle</a></td>
        <td><a href="/Yazar/YazarKitaplar/@y.ID" class="btn btn-default" style="background-color:darkorange">Yazarın Kitapları</a></td>
    </tr>
}
</table>
@Html.PagedListPager((IPagedList)Model, syf => Url.Action("Index", new { syf }))
<a class="btn btn-primary" href="/Yazar/YazarEkle/">Yeni Yazar Ekle</a>

