@model KütüphaneSistemi.Models.Entity.TBLKITAP
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@using (Html.BeginForm("KitapGüncelle", "Kitap", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div>
            <div style="margin-bottom:15px"></div>
            <label>Kitap ID</label>
            @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        </div>
        <div>
            <div style="margin-bottom:15px"></div>
            <label>Kitap Adı</label>
            @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
        </div>
        <div>
            <div style="margin-bottom:15px"></div>
            <label>Kategori</label>
            @Html.DropDownListFor(k => k.TBLKATEGORI.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        </div>
        <div>
            <div style="margin-bottom:15px"></div>
            <label>Yazarı</label>
            @Html.DropDownListFor(k => k.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <div style="margin-bottom:15px"></div>
        <label>Basımyılı</label>
        @Html.TextBoxFor(k => k.BASIMYIL, new { @class = "form-control" })
    </div>
    <div>
        <div style="margin-bottom:15px"></div>
        <label>Yayın Evi</label>
        @Html.TextBoxFor(k => k.YAYINEVI, new { @class = "form-control" })
    </div>
    <div>
        <div style="margin-bottom:15px"></div>
        <label>Sayfa Sayısı</label>
        @Html.TextBoxFor(k => k.SAYFA, new { @class = "form-control" })
    </div>
    <button class="btn btn-warning">Kitap Bilgilerini Güncelle</button>
    <input type="hidden" name="Durum" value="true" /> @*durum true false degeri için*@

}
