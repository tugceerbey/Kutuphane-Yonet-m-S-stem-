@using KütüphaneSistemi.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLUYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>Üyeler</h2>
<table class="table table-bordered">
    <tr style="background-color:#ffd800">
        <th>ÜYE ID</th>
        <th>ÜYE ADI</th>
        <th>ÜYE SOYADI</th>
        <th>OKUL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>KİTAP GEÇMİŞİ</th>
    </tr>
    @foreach (var uye in Model)
    {
    <tr>
        <td>@uye.ID</td>
        <td>@uye.AD</td>
        <td>@uye.SOYAD</td>
        <td>@uye.OKUL</td>
        <td><a href="/ÜYE/ÜyeSil/@uye.ID" class="btn btn-danger">SİL</a></td>
        <td><a href="/ÜYE/ÜyeGetir/@uye.ID" class="btn btn-success">GÜNCELLE</a></td>
        <td><a href="/ÜYE/ÜyeKitapGecmis/@uye.ID" class="btn btn-success">Kitap Geçmişi</a></td>
    </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
@*///sayfalama butonu içn*@
<a href="/Üye/ÜyeEkle/" class="btn btn-primary">Yeni Üye Ekle</a>



