@model KütüphaneSistemi.Models.Entity.TBLKATEGORI
@{
    ViewBag.Title = "KategoriGüncelle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KategoriGüncelleme", "Kategorı", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k=>k.ID)
        @Html.TextBoxFor(k=>k.ID,new { @class = "form-control" })
        <br />
        <label>Kategori Adı </label>
        @Html.TextBoxFor(k=>k.AD,new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

