@using KütüphaneSistemi.Models.Entity
@model List<TBLKATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2> Kategoriler</h2>
<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var ktg in Model)
    {
    <tr>
        <td>@ktg.ID</td>
        <td>@ktg.AD</td>
        <td><a href="/Kategorı/KategoriSil/@ktg.ID" class="btn btn-danger">SİL</a></td>
        <td><a href="/Kategorı/KategoriGüncelle/@ktg.ID" class="btn btn-success">GÜNCELLE</a></td>
    </tr>
    }
</table>
<a href="/Kategorı/KategoriEkle/" class="btn btn-primary">Yeni Kategori Ekle</a>

